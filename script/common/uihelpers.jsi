    UIHelpers.createInfoDiv = function(id, img, text, addText, evenMoreText) {
        var newDiv = document.createElement("div");

        var s = "";
        s +=     "<div class=\"tooltip_pl\" style=\"display:none; z-index:10000\" id=\"" + id + "\">";
        s +=     "    <div id=\"item_main_tooltip\">";
        s +=     "        <div id=\"item_icon\">";
